<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp">
        <TextView
            android:id="@+id/text_eval_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Evaluacion"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/text_eval_mat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_eval_nom"
            android:text="Materiaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:ellipsize="end"
            android:layout_toStartOf="@id/text_eval_fechaFin"
            android:layout_toLeftOf="@id/text_eval_fechaFin"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/text_eval_fechaFin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_eval_nom"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Fecha"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>