<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:foreground="?attr/selectableItemBackground">
    <RelativeLayout
        android:id="@+id/rel_lay_detalle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/disp_docente_segunda_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/disp_carnet_segunda_rev"
            android:layout_toStartOf="@+id/disp_carnet_segunda_rev"
            android:text="Nombre de docente de aaaaaaas"/>
        <TextView
            android:id="@+id/disp_carnet_segunda_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="AA00000"
            android:paddingRight="20dp"/>
        <TextView
            android:id="@+id/disp_cargo_docente_segunda_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/disp_docente_segunda_rev"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:text="Placeholder de cargo de docente" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>