<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    tools:context=".Activity.NuevaAsignaturaActivity"
    android:orientation="vertical"
    android:padding="2dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/NombreAsignatura"
        android:layout_marginTop="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/etNomAsignatura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="24dp"
        android:inputType="textMultiLine"
        android:hint="@string/NombreAsignatura"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:text="@string/CodDptoAsignauta"
        android:textSize="24sp"
        android:layout_marginTop="8dp"/>

    <Spinner
        android:id="@+id/spinIdAreaAdm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="40dp" />


</LinearLayout>