<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    tools:context=".Activity.NuevaSolicitudExtraordinarioActivity">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:weightSum="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:text="@string/carnetAlumno"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:paddingBottom="20dp"/>
            <EditText
                android:id="@+id/editNCarnetAlumno"
                android:inputType="text"
                android:maxLength="7"
                android:hint="@string/hintCarnetAlumno"
                tools:ignore="Autofill"
                android:paddingBottom="20dp"/>

            <TextView
                android:text="@string/idEvaluacion"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:paddingBottom="20dp"/>
            <EditText
                android:id="@+id/editNIdEvaluacion"
                android:inputType="number"
                android:maxLength="8"
                android:hint="@string/hintIdEva"
                tools:ignore="Autofill"
                android:paddingBottom="20dp"/>

            <TextView
                android:text="@string/tipoSolicitudExtra"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:paddingBottom="20dp"/>
            <Spinner
                android:id="@+id/editNTipoSoli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                />

            <TextView
                android:text="@string/motivoSolicitudExtra"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:paddingBottom="20dp"/>
            <EditText
                android:id="@+id/editNMotivoSoliExtra"
                android:hint="@string/hintMotivoSoli"
                android:inputType="text"
                tools:ignore="Autofill"
                android:paddingBottom="20dp"/>

            <TextView
                android:text="@string/fechaSolicitudExtra"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:paddingBottom="20dp"/>
            <DatePicker
                android:id="@+id/editNFechaSoliExtra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"
                android:paddingBottom="20dp"/>

            <TextView
                android:text="@string/justificacionSoliExtra"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:paddingBottom="20dp"/>
            <CheckBox
                android:id="@+id/NJustiSoliExtra"
                android:text="@string/textoJustiSoliExtra"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                tools:ignore="Autofill"
                android:paddingBottom="20dp"/>
    </TableLayout>
</ScrollView>