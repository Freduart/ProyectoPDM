<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.VerPrimeraRevisionActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:padding="16dp">
        <TextView
            android:id="@+id/codPimeraR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/CodigoPR"
            app:layout_constraintTop_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            />

        <TextView
            android:id="@+id/tvCodPR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Codigo de pr"
            app:layout_constraintTop_toBottomOf="@+id/codPrimeraR"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />
        <TextView
            android:id="@+id/localPR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/LocalPR"
            app:layout_constraintTop_toBottomOf="@+id/tvCodPR"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:paddingTop="20dp"
            />
        <TextView
            android:id="@+id/tvLocalFK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Local de prueba "
            app:layout_constraintTop_toBottomOf="@+id/localPR"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />
        <TextView
            android:id="@+id/detalleEvaFK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/DetallePR"
            app:layout_constraintTop_toBottomOf="@+id/tvLocalFK"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:paddingTop="20dp"
            />
        <TextView
            android:id="@+id/tvDetalleEvaFK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalle de prueba"
            app:layout_constraintTop_toBottomOf="@+id/detalleEvaFK"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />
        <TextView
            android:id="@+id/fechaSolicitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fechaSolPR"
            app:layout_constraintTop_toBottomOf="@+id/tvDetalleEvaFK"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:paddingTop="20dp"
            />
        <TextView
            android:id="@+id/tvFechaSolicitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="06/05/2020"
            app:layout_constraintTop_toBottomOf="@+id/fechaSolicitud"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />
        <TextView
            android:id="@+id/estadoPR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/estadoPR"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaSolicitud"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:paddingTop="20dp"
            />
        <TextView
            android:id="@+id/tvEstadoPR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="true"
            app:layout_constraintTop_toBottomOf="@+id/estadoPR"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />
        <TextView
            android:id="@+id/notaAntesPR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notaActualPR"
            app:layout_constraintTop_toBottomOf="@+id/tvEstadoPR"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:paddingTop="20dp"
            />
        <TextView
            android:id="@+id/tvNotaAntesPR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7.0"
            app:layout_constraintTop_toBottomOf="@+id/notaAntesPR"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />
        <TextView
            android:id="@+id/notaDespuesPR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notaCorregida"
            app:layout_constraintTop_toBottomOf="@+id/tvNotaAntesPR"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:paddingTop="20dp"
            />
        <TextView
            android:id="@+id/tvNotaDespuesPR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8.0"
            app:layout_constraintTop_toBottomOf="@+id/notaDespuesPR"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />
        <TextView
            android:id="@+id/observacionesPR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/observacionesPR"
            app:layout_constraintTop_toBottomOf="@+id/tvNotaDespuesPR"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:paddingTop="20dp"
            />
        <TextView
            android:id="@+id/tvObservacionesPR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="oajdfjksjfdklsdfkkjsdkfjksdkklskfkdksj"
            app:layout_constraintTop_toBottomOf="@+id/observacionesPR"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            />

    </TableLayout>
</ScrollView>