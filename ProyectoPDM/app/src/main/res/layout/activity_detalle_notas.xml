<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.DetalleNotasActivity">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1"
        android:padding="16dp">
        <TextView
            android:id="@+id/titulo_editar_detalleestudiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alumno_label_detalle"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            />
        <TextView
            android:id="@+id/titulo_nombre_detalleestudiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AA0000"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            />
        <TextView
            android:id="@+id/titulo_editar_detallenota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nota_label_detalle"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:paddingTop="20dp"
            />

        <!--ID-->
        <EditText
            android:id="@+id/nota_editar_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            />
        <Button
            android:id="@+id/boton_primera_revision_detalle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:text="@string/editarPrimeraRevisionDet"
            />
        <TextView
            android:id="@+id/mensaje_revision_existente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/adv_msg_rev"
            android:textAlignment="center"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption" />
    </TableLayout>
</ScrollView>